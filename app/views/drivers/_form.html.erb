<%= form_with model: @driver do |f| %>
	<div class="form">
		<section>
			<%= f.label :name %><br>
			<%= f.text_field :name %>
		</section>
		<section>
			<%= f.label :vin %><br>
			<%= f.text_field :vin %>
		</section>
		<%= f.hidden_field :available, :value => true %>
		<section>
			<%= f.submit action_name %>
		</section>
	</div>
<% end %>